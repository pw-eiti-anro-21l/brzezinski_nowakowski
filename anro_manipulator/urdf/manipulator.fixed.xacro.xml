<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="manipulator">
  <xacro:property name="base_length" value="0.006" />
  <xacro:property name="cyl_length" value="0.0655" />
  <xacro:property name="arm1_length" value="0.43498" />
  <xacro:property name="arm2_length" value="0.465" />
  <xacro:property name="arm3_length" value="0.129" />
  <xacro:property name="tool_length" value="0.011" />
  <xacro:arg name="fixed" default="true"/>
  <xacro:property name="continuous" value="continuous"/>
  <xacro:if value="$(arg fixed)">
    <xacro:property name="continuous" value="fixed"/>
  </xacro:if>
  <xacro:property name="base_size_x" value="0.2" />
  <link name="base">
    <collision>
      <origin xyz="0 0 ${base_length / 2}" rpy="0 0 0" />
      <geometry>
        <box size="0.192 0.337 ${base_length}" />
      </geometry>
    </collision>
  </link>

  <link name="cylinder">
    <collision>
      <origin xyz="0 0 ${cyl_length/2}" rpy="0 0 0" />
      <geometry>
        <cylinder length="${cyl_length}" radius="0.06" />
      </geometry>
    </collision>
  </link>
  <joint name="base-cyl" type="${continuous}">
    <parent link="base"/>
    <child link="cylinder"/>
    <origin xyz="0 0 ${base_length}"/>
    <axis xyz="0 0 1"/>
  </joint>  

  <link name="arm1">
    <collision>
      <origin xyz="0 0 ${arm1_length/2}" rpy="0 0 0" />
      <geometry>
        <box size="0.07 0.07 ${arm1_length}" />
      </geometry>
    </collision>
  </link>
  <joint name="cyl-arm1" type="${continuous}">
    <parent link="cylinder"/>
    <child link="arm1"/>
    <origin xyz="0 0 ${cyl_length}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="arm2">
    <collision>
      <origin xyz="0 0 ${arm2_length/2}" rpy="0 0 0" />
      <geometry>
        <box size="0.06 0.06 ${arm2_length}" />
      </geometry>
    </collision>
  </link>
  <joint name="arm1-arm2" type="${continuous}">
    <parent link="arm1"/>
    <child link="arm2"/>
    <origin xyz="0 0 ${arm1_length}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="arm3">
    <collision>
      <origin xyz="0 0 ${arm3_length/2}" rpy="0 0 0" />
      <geometry>
        <box size="0.06 0.076 ${arm3_length}" />
      </geometry>
    </collision>
  </link>
  <joint name="arm2-arm3" type="${continuous}">
    <parent link="arm2"/>
    <child link="arm3"/>
    <origin xyz="0 0 ${arm2_length}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="tool">
    <collision>
      <origin xyz="0 0 ${tool_length/2}" rpy="0 0 0" />
      <geometry>
        <cylinder length="${tool_length}" radius="0.03" />
      </geometry>
    </collision>
  </link>
  <joint name="arm3-tool" type="fixed">
    <parent link="arm3"/>
    <child link="tool"/>
    <origin xyz="0 0 ${arm3_length}"/>
  </joint>

</robot>
